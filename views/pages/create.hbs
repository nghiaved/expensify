<form action="/expense/create" method="post">
    <a href="/">
        <button type="button" class="btn btn-primary my-4 px-4">Danh sách chi tiêu</button>
    </a>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">Name</label>
            <input type="text" class="form-control" id="inputEmail4" name="name" placeholder="Name">
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4">Price</label>
            <input type="number" min="1" class="form-control" id="inputPassword4" name="price" placeholder="Price">
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4">Type</label>
            <input type="type" class="form-control" id="inputPassword4" name="type" placeholder="Type">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Thêm</button>
</form>
{{#if status}}
<h2>
    Create successfully
</h2>
{{/if}}